<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QnaActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/qna_section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QnA"
            android:fontFamily="@font/poppinsbold"
            android:textSize="24dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:outlineSpotShadowColor="@color/blue"
        android:outlineAmbientShadowColor="@color/blue"
        android:onClick="expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/lightblue">
        <LinearLayout
            android:id="@+id/qna_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ini merupakan contoh pertanyaan tentang aplikasi ini ?"
                android:fontFamily="@font/poppinsbold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:fontFamily="@font/interregular"
                android:layout_marginTop="16dp"
                android:text="Ini merupakan contoh Jawaban tentang aplikasi ini. Gatau benar atau tidak yang penting dijawab saja ya."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>